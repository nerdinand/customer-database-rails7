<%= render partial: 'form_errors', locals: { model: @product } %>

<%= form_for @product, multipart: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </p>

  <p>
    <%= form.label :price_cents %><br>
    <%= form.number_field :price_cents, step: 1 %>
  </p>

  <%= form.submit %>
<% end %>
