<h1>
  <span class="oi" data-glyph="people"></span>
  Customers
</h1>

<table>
  <thead>
    <th>Name</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer %></td>
        <td>
          <%= link_to edit_customer_path(customer) do %>
            <span class="oi" data-glyph="pencil"></span>
            Edit
          <% end %>
        </td>
        <td>
          <%= form_with model: customer, data: {'turbo-confirm': "Are you sure?"}, method: :delete do |f| %>
            <div class='submit' onclick="event.target.parentElement.requestSubmit()">
              <span class="oi" data-glyph="circle-x"></span>
              Delete
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_customer_path do %>
  <span class="oi" data-glyph="plus"></span>
  New customer
<% end %>
